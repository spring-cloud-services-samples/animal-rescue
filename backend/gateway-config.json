{
  "routes": [
    {
      "path": "/api/animals",
      "method": "GET"
    },
    {
      "path": "/api/actuator/**"
    },
    {
      "path": "/api/whoami",
      "token-relay": true,
      "sso-enabled": true
    },
    {
      "path": "/api/animals/*/adoption-requests/**",
      "method": "POST,PUT,DELETE",
      "token-relay": true,
      "sso-enabled": true
    }
  ]
}
